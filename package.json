{
  "name": "wild-horizon",
  "version": "1.0.0",
  "description": "Wild Horizon Adventures - Multi-package monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "Admin",
    "Backend",
    "Frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=Admin",
    "dev:all": "concurrently \"npm run dev --workspace=Admin\" \"npm run dev --workspace=Backend\" \"npm run dev --workspace=Frontend\"",
    "build": "npm run build -ws",
    "build:deploy": "npm run build --workspace=Admin && npm run build --workspace=Frontend && npm run copy:admin",
    "copy:admin": "mkdir -p Frontend/dist/admin && cp -r Admin/dist/* Frontend/dist/admin/",
    "lint": "npm run lint -ws",
    "typecheck": "npm run typecheck -ws",
    "install:all": "npm install -ws",
    "setup-storage": "npm run setup-storage --workspace=Admin",
    "admin:dev": "npm run dev --workspace=Admin",
    "backend:dev": "npm run dev --workspace=Backend",
    "frontend:dev": "npm run dev --workspace=Frontend"
  },
  "devDependencies": {
    "@netlify/functions": "^2.8.0",
    "concurrently": "^8.2.2"
  }
}
